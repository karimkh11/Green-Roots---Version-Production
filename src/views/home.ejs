<%- include('partials/headeer') %>

<main role="main" class="home-main">
    <h1 class="home-title">Bienvenue sur Green Roots</h1>
    <section class="home-presentation">
        <p class="home-content">Le site engagé dans la lutte contre la déforestation et la promotion de la reforestation. Notre mission consiste à préserver les forêts existantes et à restaurer les zones dégradées en plantant des arbres, pour protéger notre planète et garantir un avenir durable pour les générations futures</p>
        <a class="home-action-button" href="">Faire un don</a>
    </section>

    <section class="home-campaign">
        <div class="container">
            <h2>Les dernières campagnes</h2>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <% lastCampaigns.forEach((campaign, index) => { %>
                        <% if (index === 0) { %>
                        <li data-target="#myCarousel" data-slide-to="<%= index %>" class="active"></li>
                        <% } else { %>
                            <li data-target="#myCarousel" data-slide-to="<%= index %>"></li>
                        <% } %>
                    <% }); %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                <% lastCampaigns.forEach((campaign, index) => { %>
                    <% if (index === 0) { %>
                        <div class="item active">
                    <% } else { %>
                        <div class="item">
                    <% } %>
                            <img src="<%= lastCampaigns[index].image %>" alt="Image de la campagne <%= lastCampaigns[index].name %>">
                        </div>
                <% }); %>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
</main>
<%- include('partials/footer') %>